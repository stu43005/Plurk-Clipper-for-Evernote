{
    "manifest_version": 2,
    "name": "Plurk Clipper for Evernote",
    "version": "0.1.0",
    "description": "Clip Plurk's content to Evernote.",
    "icons": {
        "128": "128.png",
        "16": "16.png"
    },
    "author": "Shiaupiau",
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "http://www.plurk.com/*",
                "https://www.plurk.com/*"
            ],
            "js": [
                "libs/jsOAuth-1.3.7.min.js",
                "libs/evernote-sdk-minified.js",
                "libs/jquery-2.0.2.min.js",
                "libs/purl.js",
                "config.js",
                "content-script.js"
            ]
        }
    ],
    "permissions": [
        "*://www.plurk.com/",
        "https://sandbox.evernote.com/"
    ],
    "web_accessible_resources": [
        "gotOAuth.html",
        "libs/jquery-2.0.2.min.map",
        "images/web-clipper-16x16.png"
    ]
}